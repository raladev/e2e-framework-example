{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "ES2020",
    "lib": [ "ES2020", "dom", "dom.iterable"],
    "esModuleInterop": true,
    "module": "commonjs",
    "strictNullChecks": true,
    "types": ["codeceptjs", "node"],
    "declaration": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "exclude": ["node_modules"],
  "compileOnSave": true
}